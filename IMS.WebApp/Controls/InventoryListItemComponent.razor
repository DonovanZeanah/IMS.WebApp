@foreach (var inv in Inventories)
      {
            <tr>
                <td>@inv.InventoryName</td>
                <td>@inv.Quantity</td>
                <td>@inv.Price.ToString("c")</td>
                <td>
                    <button type="button"
                        class="btn btn-light">
                        Edit
                    </button>
                </td>
            </tr>
      }
@code {

    // pass the listInventories from parent to child through parameter
[Parameter]
public List<Inventory> Inventories { get; set; } = new List<Inventory>();

}
